<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/dp5"
    card_view:cardElevation="1sp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp5">

        <RelativeLayout
            android:id="@+id/rl_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/text_date"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@color/blue_color"
                android:gravity="center"
                android:text="08"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_25"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_month"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/text_date"
                android:layout_marginTop="1dp"
                android:background="@color/blue_color"
                android:gravity="center"
                android:text="JAN"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_21"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_toRightOf="@+id/rl_date"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:text="Parents teacher meeting"
                android:textColor="@color/text_colordark"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_event_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:maxLines="3"
                android:text="Lorem impsum is simple dummy text Lorem impsum is simple dummy text Lorem impsum is simple dummy text"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
